<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Feedback</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f5;
            margin: 0;
            
        }

        .container {
            max-width: 1200px;
            margin: auto;
            background-color: transparent;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        td {
            background-color: #f9f9f9;
        }

        .feedback-summary {
            background-color: transparent;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            font-size: 16px;
        }

        .summary-item {
            margin: 5px 0;
        }

        .footer {
            text-align: center;
            font-size: 14px;
            color: #888;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <%-include('facultyActivity')%>
    <div class="container">
        <h1>Faculty Feedback</h1>

        <div class="feedback-summary">
            <div class="summary-item"><strong>Course:</strong> <span id="courseName">Loading...</span></div>
            <div class="summary-item"><strong>Faculty:</strong> <span id="facultyName">Loading...</span></div>
        </div>

        <table id="feedbackTable">
            <thead>
                <tr>
                    <th>Course Plan Presentation</th>
                    <th>Course Objectives</th>
                    <th>Lecture Clarity</th>
                    <th>Learning Effectiveness</th>
                    <th>Workload Rating</th>
                    <th>Most Liked In Course</th>
                    <th>Most Liked In Tutorial</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        
        <div class="footer">
            <p>Faculty Feedback  &copy; 2024</p>
        </div>
    </div>

    <script>
        const feedbackData = <%-thisCourseFeedback %>;

        document.getElementById('courseName').textContent = <%-course%>;
        document.getElementById('facultyName').textContent = <%-facultyName%>;

        function displayFeedback(feedback) {
            const tableBody = document.querySelector("#feedbackTable tbody");
            feedback.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${item.coursePlanPresentation}</td>
                    <td>${item.courseObjectives}</td>
                    <td>${item.lectureClarity}</td>
                    <td>${item.learningEffectiveness}</td>
                    <td>${item.workloadRating}</td>
                    <td>${item.likeMostCourse}</td>
                    <td>${item.likeMosttutorial}</td>
                `;
                tableBody.appendChild(row);
            });
        }

        // Populate the table with feedback data
        displayFeedback(feedbackData);
    </script>

</body>
</html>
